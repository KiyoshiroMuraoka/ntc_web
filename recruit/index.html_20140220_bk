<script>
$(document).ready(function(){
	$(".recruitPop .inline").colorbox({inline:true, width:"800px", height:"750px"});
	
	$(".recruitField01, .recruitField02, .recruitField03, .recruitField04 .voice, .recruitField05, .recruitField06, .recruitField07").click(function( ) {
		if( $(this).find("a").attr('href') ) {
			var location = $(this).find("a").attr('href');
			$(this).colorbox({inline:true, href:location, width:"800px", height:"750px"});
			$('.normal').show();
			$('.zoom').hide();
		}
	});
	$(".recruitPopWrap").hide();
	
	$(".recruitPop .inline").click(function() {
		var i = 0;
		$('.numberLink01 li img').each(function(){
			if( $(this).hasClass("rollover") ){
				var str = $(this).attr('src');
				str = str.replace('on.','.');
				$(this).attr('src',str);
			}
		});
	});
});
</script>
